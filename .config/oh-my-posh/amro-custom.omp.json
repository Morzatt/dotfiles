{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "template": " ",
          "type": "text"
        }
      ],
      "type": "text"
    },

    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#45F1C2",
          "style": "plain",
          "template": "\ueb99 {{ .UserName }}",
          "type": "session"
        },

        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " \uf105 ",
          "type": "text"
        },

        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "[",
          "type": "text"
        },
        {
          "foreground": "#0CA0D8",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "plain",
          "template": " \uf07b {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "]",
          "type": "text"
        },

        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " \uf105 ",
          "type": "git"
        },

        {
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }} {{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }} {{ end }}",
            "{{ if gt .Ahead 0 }} {{ end }}",
            "{{ if gt .Behind 0 }} {{ end }}"
          ],
          "foreground": "#14A5AE",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uf046 {{ .Staging.String }}</>{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },

    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " \ue641 {{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " \ueba2 {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },

    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#cd5e42",
          "style": "plain",
          "template": "\ue3bf ",
          "type": "root"
        },
        {
          "foreground": "#CD4277",
          "style": "plain",
          "template": "# ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }

  ],
  "final_space": true,
  "version": 3
}
